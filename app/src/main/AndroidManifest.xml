<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.students.todolist_fixed">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
            android:name=".NotificationChannel"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:testOnly="false"
            android:theme="@style/AppTheme">
        <activity android:name=".shopDialogActivity" android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".today">
        </activity>
        <activity android:name=".shopping">
        </activity>

        <receiver
                android:name=".NotificationReceiver"
                android:enabled="true"
                android:exported="false">
        </receiver>

        <activity
                android:name=".notificationsSettings"
                android:screenOrientation="locked">
        </activity>
        <activity
                android:name=".preferencesActivity"
                android:screenOrientation="locked">
        </activity>
        <activity
                android:name=".activityAboutUs"
                android:screenOrientation="locked">
        </activity>
        <activity
                android:name=".MainActivity"
                android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".DashboardActivity"
                android:screenOrientation="locked">
        </activity>
        <activity
                android:name=".ItemActivity"
                android:screenOrientation="locked">
        </activity>
    </application>

</manifest>