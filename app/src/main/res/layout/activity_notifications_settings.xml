<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".notificationsSettings"
        android:orientation="vertical">
    <CheckBox
            android:layout_width="match_parent"
            android:layout_height="65dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/checkBox"
            android:text="@string/enable_notifications"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_height="65dp"
            android:id="@+id/selected_time_display" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_width="match_parent"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" android:clickable="true"/>
    <Button
            android:text="Test notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test_butt" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/selected_time_display"
            android:onClick="makeTestNotification"
            app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>