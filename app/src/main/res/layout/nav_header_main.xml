<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="top"
              android:orientation="vertical"
              android:paddingLeft="2dp"
              android:paddingTop="@android:dimen/app_icon_size"
              android:paddingRight="0dp"
              android:background="@color/colorPrimaryDark"
              android:paddingBottom="2dp"
              android:theme="@style/ThemeOverlay.AppCompat.Dark" android:id="@+id/linear_layout_menu">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="FUCK"
            android:paddingTop="10dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:paddingStart="25sp"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:text="@string/Hello"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textColor="@android:color/black"
            android:paddingStart="25sp"/>

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/side_menu" android:textColor="@android:color/primary_text_light"
            android:paddingStart="25sp"/>

</LinearLayout>
