<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="right" android:id="@+id/rv_shopping_layout">
    <TextView
            android:layout_height="wrap_content" android:id="@+id/rv_shopping_tv_name"
            android:layout_alignParentStart="true"
            android:textSize="30sp" android:gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:paddingTop="2sp" android:layout_width="match_parent"
            android:layout_alignTop="@+id/imageView4"
            android:layout_marginTop="0dp" android:layout_toStartOf="@+id/rv_shopping_delete_iv"
            android:layout_marginEnd="0dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rv_shopping_tv_price"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/rv_shopping_tv_name" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:gravity="end" android:textSize="18sp"/>
    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rv_shopping_tv_price" android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" android:layout_below="@+id/rv_shopping_tv_name"
            android:id="@+id/X" android:textSize="18sp" android:paddingEnd="20sp" android:paddingStart="20sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rv_shopping_amount"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/rv_shopping_tv_name"
            android:layout_toEndOf="@+id/X" android:textSize="18sp"/>
    <TextView
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_equal"
            android:layout_toEndOf="@+id/rv_shopping_amount" android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" android:layout_below="@+id/rv_shopping_tv_name" android:paddingStart="15sp"
            android:paddingEnd="15sp" android:textSize="18sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rv_shopping_summary"
            android:layout_toEndOf="@+id/tv_equal"
            android:layout_marginStart="0dp" android:layout_marginTop="0dp"
            android:layout_below="@+id/rv_shopping_tv_name" android:layout_toLeftOf="@+id/rv_shopping_tv_name"
            android:layout_marginEnd="0dp" android:layout_toStartOf="@+id/rv_shopping_currency"
            android:layout_marginRight="0dp" android:gravity="end" android:textSize="18sp"
    />
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="24sp" android:id="@+id/rv_shopping_cb_isBought"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp" android:layout_alignTop="@+id/rv_shopping_summary"
            android:layout_marginTop="0dp"
    />
    <TextView
            android:text="â‚´"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rv_shopping_currency"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35sp" android:layout_marginTop="0dp"
            android:layout_below="@+id/rv_shopping_tv_name" android:textSize="18sp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp" app:srcCompat="@android:color/transparent"
            android:id="@+id/imageView3"
            android:layout_alignEnd="@+id/rv_shopping_tv_name"
            android:layout_alignParentEnd="true" android:layout_marginTop="5sp"
            android:layout_below="@+id/rv_shopping_summary"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/imageView4"
            android:layout_alignParentEnd="true" android:layout_marginTop="0dp"
            android:layout_alignParentTop="true" android:layout_marginEnd="0dp"
    />
    <ImageView
            android:layout_width="33sp"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/rv_shopping_delete_iv"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
            android:layout_above="@+id/rv_shopping_cb_isBought" android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp" android:layout_below="@+id/imageView4" android:clickable="true"/>
</RelativeLayout>
